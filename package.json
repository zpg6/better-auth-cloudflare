{
    "name": "better-auth-cloudflare",
    "version": "0.2.5",
    "type": "module",
    "description": "Seamlessly integrate better-auth with Cloudflare Workers, D1, Hyperdrive, KV, R2, and geolocation services.",
    "author": "Zach Grimaldi",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zpg6/better-auth-cloudflare.git"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "keywords": [
        "better-auth",
        "auth",
        "plugin",
        "cloudflare",
        "workers",
        "kv",
        "d1",
        "r2",
        "files",
        "storage"
    ],
    "license": "MIT",
    "files": [
        "./dist/**/*"
    ],
    "scripts": {
        "clean": "rm -rf dist",
        "build": "unbuild --clean",
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write ."
    },
    "dependencies": {
        "drizzle-orm": "^0.44.5",
        "zod": "^4.1.5"
    },
    "peerDependencies": {
        "better-auth": "^1.1.21"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "4.20250606.0",
        "@jest/globals": "^29.7.0",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3",
        "unbuild": "^3.0.0"
    },
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        },
        "./client": {
            "import": {
                "types": "./dist/client.d.ts",
                "default": "./dist/client.mjs"
            },
            "require": {
                "types": "./dist/client.d.cts",
                "default": "./dist/client.cjs"
            }
        }
    },
    "publishConfig": {
        "access": "public"
    }
}
