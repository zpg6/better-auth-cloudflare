{
    "name": "better-auth-cloudflare",
    "version": "0.2.4",
    "type": "module",
    "description": "Seamlessly integrate better-auth with Cloudflare Workers, D1, Hyperdrive, KV, R2, and geolocation services.",
    "author": "Zach Grimaldi",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zpg6/better-auth-cloudflare.git"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "keywords": [
        "better-auth",
        "auth",
        "plugin",
        "cf",
        "cloudflare",
        "workers",
        "kv",
        "d1",
        "multi-tenancy",
        "hyperdrive",
        "r2",
        "files",
        "storage",
        "drizzle"
    ],
    "license": "MIT",
    "files": [
        "./dist/**/*"
    ],
    "scripts": {
        "clean": "rm -rf dist",
        "build": "tsc",
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write ."
    },
    "dependencies": {
        "drizzle-orm": "^0.43.1",
        "zod": "^3.24.2"
    },
    "peerDependencies": {
        "better-auth": "^1.1.21"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "4.20250606.0",
        "@jest/globals": "^29.7.0",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./client": {
            "types": "./dist/client.d.ts",
            "default": "./dist/client.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    }
}
