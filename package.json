{
    "name": "better-auth-cloudflare",
    "version": "0.2.0",
    "description": "Cloudflare integration plugin for Better Auth",
    "author": "Zach Grimaldi",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zpg6/better-auth-cloudflare.git"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "keywords": [
        "better-auth",
        "auth",
        "plugin",
        "cloudflare",
        "workers",
        "kv",
        "d1",
        "r2",
        "files",
        "storage"
    ],
    "license": "MIT",
    "files": [
        "./dist/**/*"
    ],
    "scripts": {
        "clean": "rm -rf dist",
        "build": "tsc",
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write ."
    },
    "peerDependencies": {
        "@cloudflare/workers-types": "^4",
        "better-auth": "^1.1.21",
        "drizzle-orm": ">=0.37.0"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3",
        "zod": "^3.24.2"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./client": {
            "types": "./dist/client.d.ts",
            "default": "./dist/client.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    }
}
