{
    "name": "better-auth-cloudflare",
    "version": "0.1.0",
    "description": "Cloudflare integration plugin for Better Auth",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "keywords": [
        "better-auth",
        "auth",
        "plugin",
        "cloudflare",
        "workers",
        "kv",
        "d1"
    ],
    "license": "MIT",
    "author": "",
    "files": [
        "./dist/**/*"
    ],
    "scripts": {
        "build": "tsc",
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@opennextjs/cloudflare": "1.0.1",
        "drizzle-orm": "^0.43.1",
        "zod": "^3.24.2"
    },
    "peerDependencies": {
        "better-auth": "^1.2.8-beta.4"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "4.20250507.0",
        "@jest/globals": "^29.7.0",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./client": {
            "types": "./dist/client.d.ts",
            "default": "./dist/client.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    }
}
